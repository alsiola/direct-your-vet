@model ExternalLoginConfirmationViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="eight columns">
        <h2>@ViewData["Title"].</h2>
        <h3>Associate your @ViewData["LoginProvider"] account.</h3>

        <form asp-controller="Account" asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <h4>Association Form</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <p>
                You've successfully authenticated with <strong>@ViewData["LoginProvider"]</strong>.
                Please enter an email address for this site below and click the Register button to finish
                logging in.
            </p>

            <label asp-for="Email"></label>
            <input asp-for="Email" class="u-full-width" />
            <span asp-validation-for="Email" class="text-danger"></span>

            <label asp-for="Name"></label>
            <input asp-for="Name" class="u-full-width" />
            <span asp-validation-for="Name" class="text-danger"></span>
            
            <button type="submit" class="button">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
