<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DYV</title>

    <link rel="stylesheet" href="~/dist/css/site.min.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css?family=Lobster|Raleway" rel="stylesheet" />

    @Html.ApplicationInsightsJavaScript(TelemetryConfiguration)
</head>
<body>
    <nav>
        <div class="nav-section nav-brand-container">
            <i class="fa fa-navicon fa-2x nav-toggle"></i><a asp-controller="Home" asp-action="Index" class="nav-brand">DirectYourVet</a>
        </div>
        <div class="nav-section left-nav collapse-mobile">
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Home" asp-action="About">About</a></li>
                <li><a asp-controller="Home" asp-action="Contact">Contact Us</a></li>
            </ul>
        </div>        
            @await Html.PartialAsync("_LoginPartial")        
    </nav>

    <div class="main container">
        @RenderBody()
    </div>

    @await Html.PartialAsync("_FooterPartial")

        <script src="~/dist/js/vendor.js"></script>
        <script src="~/dist/js/modules/commons.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
